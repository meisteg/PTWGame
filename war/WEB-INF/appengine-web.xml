<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
  <application>ptwgame</application>
  <version>44</version>

  <!--
    By default, App Engine sends requests serially to a given web server.
    To allow App Engine to send multiple requests in parallel set to true.
  -->
  <threadsafe>true</threadsafe>

  <!-- Configure java.util.logging -->
  <system-properties>
    <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
  </system-properties>

  <admin-console>
    <page name="PTW Admin" url="/admin" />
  </admin-console>

  <static-files>
    <include path="/**.png" expiration="7d" />
    <include path="/**.js"  expiration="7d" />
    <include path="/**.css" expiration="7d" />
    <include path="/**.ico" expiration="7d" />

    <include path="/rule_book" />
    <include path="/schedule" />
  </static-files>

</appengine-web-app>
