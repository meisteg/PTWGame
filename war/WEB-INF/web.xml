<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Questions</servlet-name>
		<servlet-class>com.meiste.greg.ptwgame.QuestionsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Answers</servlet-name>
		<servlet-class>com.meiste.greg.ptwgame.AnswersServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Suggest</servlet-name>
		<servlet-class>com.meiste.greg.ptwgame.SuggestServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Standings</servlet-name>
		<servlet-class>com.meiste.greg.ptwgame.StandingsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>History</servlet-name>
		<servlet-class>com.meiste.greg.ptwgame.HistoryServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Admin</servlet-name>
		<servlet-class>com.meiste.greg.ptwgame.AdminServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StandingsCalc</servlet-name>
		<servlet-class>com.meiste.greg.ptwgame.StandingsCalcServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Questions</servlet-name>
		<url-pattern>/questions</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Answers</servlet-name>
		<url-pattern>/answers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Suggest</servlet-name>
		<url-pattern>/suggest</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Standings</servlet-name>
		<url-pattern>/standings</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>History</servlet-name>
		<url-pattern>/history</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Admin</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StandingsCalc</servlet-name>
		<url-pattern>/tasks/standings</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/admin.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/admin</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/tasks/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
</web-app>
